package com.klef.cicd.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;
import com.klef.cicd.entity.Appointment;

@Repository
public interface AppointmentRepository extends JpaRepository<Appointment, Integer> {

    // Custom query methods (make sure Appointment entity has these fields)
    Appointment findByParticipant(String participant);
    Appointment findByDateAndTime(String date, String time);
}
